<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111827">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#1F2937"
        android:gravity="center_vertical">

        <!-- Rute Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RUTE AKTIF"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="#9CA3AF"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/tv_rute_aktif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SBY â†’ MADIUN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- GPS Status Badge -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#064E3B">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/circle_green"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS ON"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#10B981" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Main Counter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL PENUMPANG"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:letterSpacing="0.15"
            android:layout_marginBottom="24dp" />

        <!-- Big Counter -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_jumlah_penumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34"
                android:textSize="90sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/tv_kapasitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/40"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#9CA3AF"
                android:background="#1F2937"
                android:padding="4dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-24dp" />
        </RelativeLayout>

        <!-- Penumpang Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Kurang Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1F2937">

                <Button
                    android:id="@+id/btn_kurang_penumpang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="âˆ’\nTURUN"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#EF4444"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

            <!-- Tambah Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2563EB">

                <Button
                    android:id="@+id/btn_tambah_penumpang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+\nNAIK"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Status Kondisi Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAPOR KONDISI BUS:"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <!-- Status Buttons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Status: Lancar -->
                <Button
                    android:id="@+id/btn_status_lancar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="âœ“\nLANCAR"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_status_lancar"
                    android:gravity="center" />

                <!-- Status: Macet -->
                <Button
                    android:id="@+id/btn_status_macet"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="âš \nMACET"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#FBBF24"
                    android:background="@drawable/btn_status_inactive"
                    android:gravity="center"
                    android:alpha="0.5" />

                <!-- Status: Mogok -->
                <Button
                    android:id="@+id/btn_status_mogok"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="ðŸ”§\nMOGOK"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#EF4444"
                    android:background="@drawable/btn_status_inactive"
                    android:gravity="center"
                    android:alpha="0.5" />
            </LinearLayout>
        </LinearLayout>

        <!-- Info Stats (Speed, Distance, Duration) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan"
                    android:textSize="9sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 km/h"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jarak"
                    android:textSize="9sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 km"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durasi"
                    android:textSize="9sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0j 0m"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Action -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#1F2937">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_akhiri_perjalanan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="â¬› AKHIRI PERJALANAN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:background="@drawable/btn_danger_outline"
                android:gravity="center" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:indeterminateTint="#EF4444" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>